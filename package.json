{
  "name": "php-debug-inline",
  "displayName": "PHP Debug Inline",
  "description": "Shows PHP variable values inline during debugging.",
  "icon": "images/logo.png",
  "publisher": "ericgomez",
  "version": "0.0.6",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "galleryBanner": {
    "color": "#6682BA",
    "theme": "dark"
  },
  "categories": [
    "Debuggers"
  ],
  "keywords": [
    "php",
    "debug",
    "xdebug"
  ],
  "activationEvents": [
    "onDebug",
    "onDebugInitializedMode",
    "onLanguage:php"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "debuggers": [
      {
        "type": "php-inline-debug",
        "label": "PHP Debug Inline",
        "languages": ["php"]
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ericgomez/vscode-php-debug-inline"
  },
  "bugs": {
    "url": "https://github.com/ericgomez/vscode-php-debug-inline/issues",
    "email": "eric.gomez.sanchez@gmail.com"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9"
  }
}
